<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:fb="http://www.facebook.com/2008/fbml">
  <head>
    <title>Facebook Likes</title>
    <%= javascript_include_tag :all, :recursive => true %>
    <%= stylesheet_link_tag("application") %>
  </head>

  <body>
    <div id="fb-root"></div>
    <div class=nav>
      <% if @user %>
        Logged as <%=@user["name"] %>
      <% end %>
    </div>
    <div class="content">
      <%= yield %>
    </div>
  </body>
  
</html>
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:fb="http://www.facebook.com/2008/fbml">
  <head>
    <title>Facebook Likes</title>
    <%= javascript_include_tag :all, :recursive => true %>
    <%= stylesheet_link_tag("application") %>
  </head>

  <body>
    <div id="fb-root"></div>
    <div id="fb-app-id" style="display: none"><%=Facebook::APP_ID.to_s %></div>
    <div class="nav">
      <% if @user %>
        <span>Logged in as <%=@user["name"] %></span>
        <a href="#" id="logout" callback='<%=logout_url() %>' >
          <%= image_tag "logout_small.gif", :id => "fb_logout_image", :alt => "Logout" %>
        </a>
      <% end %>
    </div>
    <div class="content">
      <%= yield %>
    </div>
  </body>
  
</html>